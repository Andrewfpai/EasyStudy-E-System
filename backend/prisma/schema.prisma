generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id             Int           @id @default(autoincrement())
  name           String
  phoneNumber    String
  email          String        @unique
  address        String
  joinedDate     DateTime      @default(now())
  tokenUsed      Int
  tokenRemaining Int
  updatedAt      DateTime?     @updatedAt
  status         StudentStatus @default(ACTIVE)
}

enum StudentStatus {
  ACTIVE
  OUT
  TEMP_INACTIVE
}
