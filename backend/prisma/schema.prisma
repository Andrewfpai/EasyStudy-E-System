generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id              Int           @id @default(autoincrement())
  name            String
  hanziName       String?
  pinyinName      String?
  phoneNumber     String
  email           String
  address         String
  joinedDate      DateTime      @default(now())
  birthDate       DateTime?
  startLevel      String?       @default("Basic")
  gender          String?       @default("Laki-laki")
  parentName      String?
  parentPhone     String?
  education       String?
  schoolOrCompany String?
  mandarinGoal    String?
  heardFrom       String?
  lessonPrice     String?
  tokenUsed       Int           @default(0)
  tokenRemaining  Int
  updatedAt       DateTime?     @updatedAt
  status          StudentStatus @default(Aktif)
  tipeHarga       TipeHarga?
  notes           String?

  // Relation to payment proofs
  payments          PaymentProof[]
  tokenUsageHistory TokenUsedDate[]
  tokenAddHistory   TokenAddedDate[]
}

model PaymentProof {
  id        Int      @id @default(autoincrement())
  studentId Int
  imageUrl  String
  createdAt DateTime @default(now())

  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
}

model TokenUsedDate {
  id          Int      @id @default(autoincrement())
  studentId   Int
  createdAt   DateTime @default(now())
  tokenAmount Int?

  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
}

model TokenAddedDate {
  id          Int      @id @default(autoincrement())
  studentId   Int
  createdAt   DateTime @default(now())
  tokenAmount Int?
  student     Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
}

enum StudentStatus {
  Aktif
  Nonaktif
  Keluar
}

enum TipeHarga {
  Lama
  Baru
}
